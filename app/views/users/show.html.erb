<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condences user-table">
    <tr>
      <td>
        <%= link_to "←", user_path(date: @first_day.prev_month), class: "btn btn-info" %>
        【<%= l(@first_day, format: :middle) %>】時間管理表
        <%= link_to "→", user_path(date: @first_day.next_month), class: "btn btn-info" %>
        </td>
      <td>指定勤務時間  <%= format_basic_info(@user.work_time) %></td>
      <td>基本時間  <%= format_basic_info(@user.basic_time) %></td>
      <td>初日  <%= l(@first_day, format: :short) %></td>
    </tr>
    
    <tr>
      <td>所属：<%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>氏名<%= @user.name %></td>
      <td rowspan="1">コード</td>
      <td>出勤日数  <%= @worked_sum %>日</td>
      <td>締め:<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>


  <table class="table table-bordered table-condenses table-hover" id="table-attendances">
    <thead>
      <tr>
        <th>日付</th>
        <th>曜日</th>
        <th>出社</th>
        <th>退社</th>
        <th>在社時間</th>
        <th>備考</th>
        <th>残業指示</th>
        <th>指示者</th>
      </tr>
    </thead>
    
    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td><%= $days_of_the_week[day.worked_on.wday] %></td>
          <td><%= l(day.started_at, format: :time) if day.started_at.present? %></td>
          <td><%= l(day.finished_at, format: :time) if day.finished_at.present? %></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= working_times(day.started_at, day.finished_at) %>
            <% end %>
          </td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
    
    <tfoot>
      <!--rowspan:縦結合、colspan：横結合-->
      <tr>
        <td colspan="2">累計日数</td>
        <td colspan="2"></td>
        <td colspan="1">累計在社時間</td>
        <td></td>
      </tr>
      <tr>
        <td colspan="2"><%= @attendances.count %></td>
        <td colspan="2"></td>
        <td colspan="2"></td>
      </tr>
    </tfoot>
  </table>
</div>