<% provide(:title, "All Users") %>
<h1>ユーザ一覧</h1>

<div class="col-md-10 col-md-offset-1">
  <table class="table table-condenses table-hover" id="table-users">
    <thead>
      <tr>
        <th><%= User.human_attribute_name :name %></th>
      </tr>
    </thead>
    
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
      </tr>
    <% end %>
  </table>
</div>